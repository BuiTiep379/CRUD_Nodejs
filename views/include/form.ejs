<form   method="POST" id="add_user" class="mt-4">
    <div class="form-outline mb-4">
        <input type="text" id="name" class="form-control" />
        <label class="form-label" for="name">Name</label>
    </div>
   <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="email" id="email" class="form-control" />
        <label class="form-label" for="email">Email address</label>
    </div>  
    <div class="form-outline mb-4">
        <label style= "margin-left: 10px;"class="form-label" for="gender">Gender: </label>
        <div class="form-check form-check-inline" style= "margin-left: 80px;">
            <input
              class="form-check-input"
              type="radio"
              name="male"
              id="male"
              value="male"
            />
            <label class="form-check-label" for="male">Male</label>
          </div>
          
          <div class="form-check form-check-inline" style= "margin-left: 80px;">
            <input
              class="form-check-input"
              type="radio"
              name="female"
              id="female"
              value="female"
            />
            <label class="form-check-label" for="female">Female</label>
          </div>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" style= "margin-left: 10px;" for="status">Status: </label>
        <div class="form-check form-check-inline" style= "margin-left: 84px;">
            <input
              class="form-check-input"
              type="radio"
              name="active"
              id="active"
              value="active"
            />
            <label class="form-check-label" for="male">Active</label>
          </div>
          
          <div class="form-check form-check-inline" style= "margin-left: 71px;">
            <input 
              class="form-check-input"  
              type="radio"
              name="inactive"
              id="inactive"
              value="inactive"
            />
            <label class="form-check-label" for="female">Inactive</label>
          </div>
    </div>
    <!-- Default radio -->
    <button type="submit" class="btn btn-primary btn-block mb-2">Save</button>

</form>